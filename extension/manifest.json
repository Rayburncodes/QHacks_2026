{
  "manifest_version": 3,
  "name": "Heuristx",
  "version": "1.0.0",
  "description": "Detect harmful psychological patterns in your trading behavior on any trading platform",
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "https://www.tradingview.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "lib/bias-detector.js",
        "content/human-tax-widget.js",
        "content/content.js"
      ],
      "css": [
        "content/styles.css"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content/panel.html",
        "content/panel.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}